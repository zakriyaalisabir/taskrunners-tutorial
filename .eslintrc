{
  "extends": ["eslint:recommended", "prettier"],
  "plugins": ["prettier"],
  "parserOptions": {
    "ecmaVersion": 2016,
    "sourceType": "script"
  },
  "env": {
    "node": true
  },
  "rules": {
    "prettier/prettier": "error",
    "no-confusing-arrow": "error",
    "no-var": "error",
    "strict": ["error", "global"],
    "prefer-const": "error"
  }
}
